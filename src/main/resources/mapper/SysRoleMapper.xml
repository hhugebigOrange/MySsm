<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lixiang.ssm.mapper.SysRoleMapper">

	<resultMap id="BaseResultMap" type="com.lixiang.ssm.entity.SysRole">
		<id column="ROLE_ID" jdbcType="INTEGER" property="roleId" />
		<result column="ROLE_NAME" jdbcType="VARCHAR" property="roleName" />
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="description" />
		<result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime" />
	</resultMap>

	<sql id="Base_Column_List">
		ROLE_ID, ROLE_NAME, DESCRIPTION, CREATE_TIME
	</sql>

	<select id="getSysRoleByUserId" resultMap="BaseResultMap">
		select
		sr.ROLE_ID,sr.ROLE_NAME,sr.DESCRIPTION,sr.CREATE_TIME
		from t_sys_role sr join t_sys_user_role sru on sr.role_id=sru.role_id
		join t_sys_user su on sru.user_id=su.user_id
		where su.user_id=#{userId}
	</select>

</mapper>